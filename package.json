{
  "name": "bimbala-desktop",
  "productName": "Bimbala Desktop",
  "version": "1.0.5",
  "description": "Desktop app version of Bimbala",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "npm run make-linux && npm run make-zip && npm run make-windows",
    "make-linux": "electron-forge make --platform linux",
    "make-zip": "electron-forge make --platform darwin",
    "make-windows": "electron-forge make --platform win32",
    "publish": "electron-forge publish"
  },
  "keywords": [
    "project",
    "management",
    "product",
    "faq",
    "roadmap"
  ],
  "author": "Bimbala",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/publisher-github": "^7.4.0",
    "electron": "^31.0.0",
    "tailwindcss": "^3.4.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "update-electron-app": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bimbalacom/Desktop.git"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "bimbala-desktop",
        "icon": "./assets/256x256"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "bimbala_desktop"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "Bimbalacom",
              "name": "Desktop"
            },
            "draft": true,
            "generateReleaseNotes": true
          }
        }
      ]
    }
  }
}
